<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F5F7FA;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rtpsuite.HomeController">
   <center>
      <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 60;">
         <children>
            <Label text="Treatment Planning Suite" textFill="#003087">
               <font>
                  <Font name="System Bold" size="42.0" />
               </font>
            </Label>
            <Label text="Treatment Time Calculator &amp; Quality Assurance" textFill="#4A5568">
               <font>
                  <Font name="System" size="20.0" />
               </font>
            </Label>

            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#openUserLogin" prefHeight="80.0" prefWidth="400.0" styleClass="primary-button" text="User Login">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#openAdminPage" prefHeight="80.0" prefWidth="400.0" styleClass="secondary-button" text="Administrator Login">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
