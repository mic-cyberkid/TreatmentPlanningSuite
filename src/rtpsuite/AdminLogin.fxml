<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="622.0" prefWidth="469.0" style="-fx-background-color: linear-gradient(to bottom, #E6F0FA, #F5F7FA);" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rtpsuite.AdminLoginController">

   <center>
      <VBox alignment="CENTER" maxWidth="466.0" prefHeight="601.0" prefWidth="466.0" spacing="30.0" style="-fx-padding: 40; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 8);">
         <children>
            <Label alignment="CENTER" prefHeight="47.0" prefWidth="396.0" text="Treatment Planning Suite" textFill="#003087">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="Administrator Login" textFill="#2D3748">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>

            <Label fx:id="infoLabel" alignment="CENTER" prefHeight="30.0" prefWidth="350.0" textFill="#F56565" wrapText="true">
               <font>
                  <Font name="System" size="16.0" />
               </font>
            </Label>

            <VBox spacing="20.0">
               <children>
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Username" textFill="#4A5568">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="admin_username" prefHeight="48.0" promptText="Enter username" styleClass="text-field" />
                     </children>
                  </VBox>

                  <VBox spacing="8.0">
                     <children>
                        <Label text="Password" textFill="#4A5568">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="admin_password" prefHeight="48.0" promptText="Enter password" styleClass="text-field" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#logonAdminPage" prefHeight="56.0" prefWidth="300.0" styleClass="primary-button" text="Login">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#backToHome" prefHeight="44.0" prefWidth="200.0" styleClass="secondary-button" text="Back to Home" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50" left="50" right="50" top="40" />
         </padding>
      </VBox>
   </center>
</BorderPane>
